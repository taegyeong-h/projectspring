{{! ArticleController -> articles/new }}

{{>layouts/header}}
<form class="container" action="/articles/create" method="post">     {{! where = action="/articles/create" how = method="post" }}
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input type="text" class="form-control" name ="title" >                     {{! 입력 폼  name ="title" -> @PostMapping DTO mapping}}
    </div>
    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name ="content"></textarea>          {{! 입력 폼 name ="content" -> @PostMapping DTO mapping }}
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/articles"> Back</a>

</form>

{{>layouts/footer}}